{% extends 'site/area/page.html.twig' %}


{% block pageTitle %}Comment on {{ area.title }} - {% endblock %}

{% block innerContent %}

	<form action="#" method="post" class="styled">

		{{ form_errors(form) }}

		{%  if parentAreas|length > 1 %}
			<div class="rowWrapper">
				<div class="labelWrapper" id="ChangeEventAreaListLabel">Is this about</div>
				<div class="widgetWrapperPlacementOnly">
					{% for i in 1..(parentAreas|length -1) %}
						{%  set nextUpArea = parentAreas[i] %}
						<label><input type="radio" name="area" value="{{ nextUpArea.slug  }}">{{ nextUpArea.title  }}</label>
					{%  endfor %}
					<label><input type="radio" name="area" value="{{ area.slug  }}">{{ area.title }}</label>
				</div>
				<div class="after"></div>
			</div>
		{%  endif %}

		{{ form_row(form.title) }}
		{{ form_row(form.comment) }}

		{{ form_rest(form) }}

		<div class="bigSubmitActionWrapper"><input type="submit"  value="Post" class="bigSubmitAction"/></div>
		<div class="afterBigSubmitActionWrapper"></div>
	</form>
{% endblock %}

