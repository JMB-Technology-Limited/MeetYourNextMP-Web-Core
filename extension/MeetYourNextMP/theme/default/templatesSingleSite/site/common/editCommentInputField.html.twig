{%  if currentSiteFeatures.has('org.openacalendar','EditComments') %}
	<div class="rowWrapper" id="formRowEditCommentToggler" onclick="onClickFormRowEditCommentToggler(); return false;">
		<div class="labelWrapper">&nbsp;</div>
		<div class="widgetWrapperPlacementOnly">
			<span class="arrow">&#x25B2;</span>
			<span class="title">Add a comment about this - can you tell us the source of your information?</span>
		</div>
		<div class="after"></div>
	</div>
	<div id="formRowEditCommentWrapper"  style="display: none;">
		<div class="rowWrapper" >
			<div class="labelWrapper">&nbsp;</div>
			<div class="widgetWrapperPlacementOnly">
				<span class="title">Add a comment on this - can you tell us the source of your information?</span>
			</div>
			<div class="after"></div>
		</div>
		<div class="rowWrapper">
			<div class="labelWrapper">&nbsp;</div>
			<div class="widgetWrapperPlacementOnly">
				<span class="title"><input type="text" name="edit_comment"></span>
			</div>
			<div class="after"></div>
		</div>
	</div>
{% endif %}
