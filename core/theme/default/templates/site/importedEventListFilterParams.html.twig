<div class="filterListImportedEventWrapper">
	<form method="get" class="filterListImportedEvent">
		<input type="hidden" name="importedEventListFilterDataSubmitted" value="1">

		{% if importedEventListFilterParams.dateControls %}
			<div class="inputField">
				<label><input type="checkbox" name="fromNow" value="1" {% if importedEventListFilterParams.fromNow %}checked{% endif %}> From now</label>
			</div>

			<div class="inputField" id="importedEventListFilterFromWrapper">
				<label>From <input type="text" name="from" value="{{  importedEventListFilterParams.from }}"></label>
			</div>
		{% endif %}

		<div class="submitField">
			<input type="submit" value="Filter">
		</div>
	</form>
</div>
